{
  "name": "yali-app",
  "version": "1.2.4",
  "description": "YaliApp - Yusuf Ali Blog Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Yusuf Ali Yaylaci",
  "license": "ISC",
  "build": {
    "appId": "com.yaliapp.desktop",
    "productName": "YaliApp",
    "publish": [
      {
        "provider": "github",
        "owner": "yusufaliyaylaci",
        "repo": "yusufaliyaylaci.github.io"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YaliApp",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "license": "build/license.txt",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": true
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*"
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}

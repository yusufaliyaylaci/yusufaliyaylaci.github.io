{
  "name": "yali-app",
  "version": "1.5.0",
  "description": "YaliApp - Yusuf Ali Blog Desktop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "Yusuf Ali Yaylaci",
  "license": "ISC",
  "build": {
    "appId": "com.yaliapp.desktop",
    "productName": "YaliApp",
    "artifactName": "${productName}-${version}-linux.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "yusufaliyaylaci",
        "repo": "yusufaliyaylaci.github.io"
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YaliApp",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeader": "build/installerHeader.bmp",
      "installerSidebar": "build/installerSidebar.bmp",
      "license": "build/license.txt",
      "deleteAppDataOnUninstall": true,
      "displayLanguageSelector": false,
      "language": "1033"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "pacman"
      ],
      "icon": "assets/profil.png",
      "category": "Audio",
      "description": "Yusuf Ali Blog & Radyo Player",
      "maintainer": "Yusuf Ali Yaylaci"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*",
      "!build/*",
      "!deploy.bat",
      "!.gitignore"
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  }
}
